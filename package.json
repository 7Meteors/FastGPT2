{
  "name": "fastgpt",
  "version": "4.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "format-code": "prettier --config \"./.prettierrc.js\" --write \"./**/src/**/*.{ts,tsx,scss}\"",
    "format-doc": "zhlint --dir ./docSite *.md --fix",
    "gen:theme-typings": "chakra-cli tokens packages/web/styles/theme.ts --out node_modules/.pnpm/node_modules/@chakra-ui/styled-system/dist/theming.types.d.ts",
    "postinstall": "sh ./scripts/postinstall.sh",
    "initIcon": "node ./scripts/icon/init.js",
    "previewIcon": "node ./scripts/icon/index.js",
    "checkI18n": "node ./scripts/i18n/delete-unused-keys.js",
    "build-docker": "docker build -f ./projects/app/Dockerfile -t zzh.fastgpt2:v0.0.3 . --build-arg name=app --build-arg proxy=taobao"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^2.4.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "i18next": "23.11.5",
    "next-i18next": "15.3.0",
    "react-i18next": "14.1.2",
    "prettier": "3.2.4",
    "zhlint": "^0.7.4"
  },
  "lint-staged": {
    "./**/**/*.{ts,tsx,scss}": "npm run format-code",
    "./docSite/**/**/*.md": "npm run format-doc"
  },
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.6.0+sha512.38dc6fba8dba35b39340b9700112c2fe1e12f10b17134715a4aa98ccf7bb035e76fd981cf0bb384dfa98f8d6af5481c2bef2f4266a24bfa20c34eb7147ce0b5e"
}
